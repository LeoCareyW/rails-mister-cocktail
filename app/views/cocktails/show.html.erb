
<div class="show-content">
  <div class="show-header">
    <h1> <%= @cocktail.name %> </h1>
  </div>

<div class="doses">
   <% @cocktail.doses.each do |dose| %>
              <tr>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to remove this item?" } do %>
                    <i class="fa fa-trash destroy_dose"></i>
                    <td><%= dose.ingredient.name %> - </td>
                    <td><%= dose.description %></td>
                  <% end %>
                </td>
              </tr>
            <% end %>
</div>

<div class="options">
  <p> <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %> </p>
  <p> <%= link_to "Back to all cocktails", cocktails_path %> </p>
</div>
