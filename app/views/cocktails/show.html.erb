
<div class="show-content">
  <div class="show-header">
    <h1> <%= @cocktail.name %> </h1>
  </div>

<div class="show-container">
  <div class="card-category">
    <%= cl_image_tag @cocktail.photo.key, width: 650, height: 500, crop: :fill  %>
  </div>
    <div class="doses">
     <% @cocktail.doses.each do |dose| %>
       <tr>
         <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to remove this item?" } do %>
             <td><%= dose.ingredient.name %> - </td>
               <td><%= dose.description %></td>
                  <i class="fa fa-trash destroy_dose"></i>
                 <% end %>
              </td>
            </tr>
          <% end %>
      <div class="options">
        <p> <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %> </p>
        <p> <%= link_to "Back to all cocktails", cocktails_path %> </p>
      </div>
    </div>
  </div>
